{
  "name": "@chittyos/chittycontext",
  "version": "1.0.0",
  "description": "ChittyOS Structured Runtime Context - ChittyID tracking, provenance, trust scoring, and ChittyDNA integration for Cloudflare Workers",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "keywords": [
    "chittyos",
    "chittyid",
    "context",
    "provenance",
    "trust",
    "audit",
    "cloudflare-workers",
    "chittydna",
    "chittyconnect"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chittyos/chittycontext.git",
    "directory": "packages/runtime"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware.js",
      "types": "./dist/middleware.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/middleware.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts src/middleware.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "hono": "^4.6.5",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "hono": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "hono": {
      "optional": true
    }
  }
}
